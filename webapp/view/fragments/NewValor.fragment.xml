<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    
    <Dialog
        title="Nuevo Valor"
        contentWidth="500px"
        resizable="true"
        draggable="true">
        
        <content>
            <form:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                
                <form:content>
                    <Label text="ID Valor" required="true"/>
                    <Input id="valInputIdValor" placeholder="Ej: ROJO"/>
                    
                    <Label text="Valor" required="true"/>
                    <Input id="valInputValor" placeholder="Ej: Color Rojo"/>

                    <Label text="Valor Padre"/>
                    <HBox 
                        width="100%" 
                        alignItems="Center" 
                        justifyContent="SpaceBetween">
                        <ComboBox
                            id="valComboBoxIdValorPa"
                            width="100%"
                            placeholder="Buscar o seleccionar valor padre..."
                            selectionChange=".onValorPadreComboChange"
                            showSecondaryValues="true"
                            items="{valueHelp>/flatItems}">
                            <core:ListItem 
                                key="{valueHelp>idvalor}" 
                                text="{valueHelp>valor} ({valueHelp>idvalor})"
                                additionalText="{valueHelp>etiqueta}"/>
                            <layoutData>
                                <FlexItemData growFactor="1" />
                            </layoutData>
                        </ComboBox>
                        <Button
                            icon="sap-icon://value-help"
                            type="Transparent"
                            press=".onOpenValorPadreDialog"
                            tooltip="Abrir ayuda de valor"/>
                        <Button
                            id="valClearButton"
                            icon="sap-icon://decline"
                            type="Transparent"
                            visible="false"
                            press=".onClearValorPadre"
                            tooltip="Limpiar selección"/>
                    </HBox>
                    
                    <Label text="Secuencia"/>
                    <Input id="valInputSecuencia" type="Number" placeholder="0"/>
                    
                    <Label text="Imagen"/>
                    <Input id="valInputImagen" placeholder="URL de la imagen"/>
                    
                    <Label text="Ruta"/>
                    <Input id="valInputRuta" placeholder="Ruta"/>
                    
                    <Label text="Descripción"/>
                    <TextArea
                        id="valTextAreaDescripcion"
                        rows="3"
                        placeholder="Descripción del valor"/>
                    
                </form:content>
            </form:SimpleForm>
        </content>
        
        <beginButton>
            <Button
                text="Guardar"
                type="Emphasized"
                press=".onSaveNewValor"/>
        </beginButton>
        
        <endButton>
            <Button
                text="Cancelar"
                press=".onCloseNewValor"/>
        </endButton>
        
    </Dialog>
    
</core:FragmentDefinition>