<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    
    <Dialog
        title="Nuevo Valor"
        contentWidth="500px"
        resizable="true"
        draggable="true">
        
        <content>
            <form:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12">
                
                <form:content>
                    <Label text="ID Valor" required="true"/>
                    <Input id="valInputIdValor" placeholder="Ej: ROJO"/>
                    
                    <Label text="Valor" required="true"/>
                    <Input id="valInputValor" placeholder="Ej: Color Rojo"/>

                    <Label text="Valor Padre"/>
                    <Input id="valInputIdValorPa" placeholder="Ej: COLORES"/>
                    
                    <Label text="Secuencia"/>
                    <Input id="valInputSecuencia" type="Number" placeholder="0"/>
                    
                    <Label text="Imagen"/>
                    <Input id="valInputImagen" placeholder="URL de la imagen"/>
                    
                    <Label text="Ruta"/>
                    <Input id="valInputRuta" placeholder="Ruta"/>
                    
                    <Label text="Descripción"/>
                    <TextArea
                        id="valTextAreaDescripcion"
                        rows="3"
                        placeholder="Descripción del valor"/>
                    
                </form:content>
            </form:SimpleForm>
        </content>
        
        <beginButton>
            <Button
                text="Guardar"
                type="Emphasized"
                press=".onSaveNewValor"/>
        </beginButton>
        
        <endButton>
            <Button
                text="Cancelar"
                press=".onCloseNewValor"/>
        </endButton>
        
    </Dialog>
    
</core:FragmentDefinition>