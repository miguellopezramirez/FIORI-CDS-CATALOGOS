<mvc:View
    controllerName="com.cat.sapfioricatalogs.controller.Configuracion"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="configuracionPage" title="ConfiguraciÃ³n">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Seleccionar Base de Datos" design="Bold" class="sapUiSmallMarginBottom" />

                <Select id="dbSelectionList" change=".onDbSelectionChange" width="250px">
                    <items>
                        <core:Item key="MongoDB" text="MongoDB" />
                        
                        <core:Item key="CosmosDB" text="Azure CosmosDB" />
                    </items>
                </Select>
            </VBox>
            
            <VBox class="sapUiSmallMarginTop">
                <Label text="Seleccionar Tema" design="Bold" class="sapUiSmallMarginBottom" />
                <Select 
                    id="themeSelectionList" 
                    selectedKey="{config>/selectedTheme}" 
                    change=".onThemeSelectionChange" 
                    width="250px">
                    <items>
                        <core:Item key="sap_horizon" text="Claro (Light Mode)" />
                        <core:Item key="sap_horizon_dark" text="Oscuro (Dark Mode)" />
                    </items>
                </Select>
            </VBox>
            
        </content>
    </Page>
</mvc:View>